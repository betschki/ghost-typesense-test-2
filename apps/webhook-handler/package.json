{
  "name": "@magicpages/ghost-typesense-webhook",
  "version": "1.0.0",
  "description": "Netlify webhook handler for Ghost Typesense integration",
  "private": false,
  "scripts": {
    "build": "tsup src/handler.ts --format cjs --dts",
    "clean": "rimraf dist",
    "dev": "tsup src/handler.ts --format cjs --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@magicpages/ghost-typesense-config": "^1.0.0",
    "@magicpages/ghost-typesense-core": "^1.0.0",
    "@netlify/functions": "^2.5.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "tsup": "^8.0.1",
    "rimraf": "^5.0.5",
    "vitest": "^1.2.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
} 